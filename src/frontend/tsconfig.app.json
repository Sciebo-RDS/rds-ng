{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "target": "ES2021",
        "strict": true,
        "strictFunctionTypes": false,
        "noUnusedParameters": false,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@common/*": [
                "../common/web/*"
            ],
            "@assets/*": [
                "../common/assets/*"
            ]
        }
    }
}
