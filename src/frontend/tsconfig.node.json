{
    "extends": "@tsconfig/node18/tsconfig.json",
    "include": [
        "vite.config.*",
        "vitest.config.*",
        "cypress.config.*",
        "nightwatch.conf.*",
        "playwright.config.*"
    ],
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "target": "ES2021",
        "strict": true,
        "strictFunctionTypes": false,
        "noUnusedParameters": false,
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": [
            "node"
        ]
    }
}
